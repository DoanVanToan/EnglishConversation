<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="conversation"
            type="com.framgia.englishconversation.data.model.ConversationModel" />

        <variable
            name="position"
            type="int" />

        <variable
            name="viewModel"
            type="com.framgia.englishconversation.screen.conversationdetail.ConversationDetailViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_56"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_56"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16">

        <ImageView
            android:id="@+id/image_recording_audio"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/ic_audio_conversation"
            android:contentDescription="@string/description_recording_audio_convention"
            android:onClick="@{() -> viewModel.onAudioConversationClick(position)}"
            android:visibility="@{conversation.mediaModel == null ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/edit_conversation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/bg_recording_audio_layout"
            android:gravity="center_vertical|start"
            android:minHeight="@dimen/dp_56"
            android:padding="@dimen/dp_4"
            android:text="@={conversation.content}"
            android:textColor="@{viewModel.currentPosition == position ? @android:color/holo_red_light : @android:color/black}"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_recording_audio" />

    </android.support.constraint.ConstraintLayout>

</layout>
