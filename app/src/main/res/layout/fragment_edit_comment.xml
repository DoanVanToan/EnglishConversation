<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.framgia.englishconversation.screen.createcomment.CreateCommentViewModel" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.framgia.englishconversation.screen.createcomment.CreateCommentFragment">

        <ImageView
            android:id="@+id/iv_multimedia"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:onClick="@{() -> viewModel.onMultimediaIconTouch()}"
            app:layout_constraintBottom_toBottomOf="@+id/et_input_comment"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/et_input_comment"
            app:layout_constraintTop_toTopOf="@+id/et_input_comment"
            app:srcCompat="@drawable/ic_add_black_24dp" />

        <EditText
            android:id="@+id/et_input_comment"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/bg_corner_edit_text"
            android:hint="@string/description_write_a_comment"
            android:inputType="text"
            android:maxLines="1"
            android:paddingEnd="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingStart="@dimen/dp_5"
            android:text="@={viewModel.inputtedComment}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_multimedia"
            app:layout_constraintTop_toBottomOf="@id/btn_save_comment">

        </EditText>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:adapter="@{viewModel.multimediaAdapter}"
            app:layoutManager="LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/btn_save_comment"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_save_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/aar_ic_check"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toTopOf="@id/et_input_comment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycler_media"
            app:onClickSafely="@{(v)-> viewModel.onSaveEditComment(etInputComment)}" />

        <ImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/aar_ic_clear"
            android:backgroundTint="@color/color_red_500"
            android:windowSoftInputMode="adjustPan"
            app:layout_constraintBottom_toTopOf="@id/et_input_comment"
            app:layout_constraintRight_toLeftOf="@id/btn_save_comment"
            app:layout_constraintTop_toBottomOf="@id/recycler_media"
            app:onClickSafely="@{(v)-> viewModel.onCancelEditComment()}" />
    </android.support.constraint.ConstraintLayout>
</layout>
